<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:GeoContacts.Helpers" 
             x:Class="GeoContacts.View.NearbyPage" 
             xmlns:models="clr-namespace:GeoContacts.Model"
             xmlns:cells="clr-namespace:GeoContacts.Cells"
             xmlns:effects="clr-namespace:GeoContacts.Effects"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="MyListView"
                    ItemsSource="{Binding ContactsGrouped}"
                    GroupDisplayBinding="{Binding Key}"
                    IsGroupingEnabled="True"
                    d:IsGroupingEnabled="False"
                    HasUnevenRows="True"
                    IsVisible="{Binding IsNotBusy}"
                    CachingStrategy="RecycleElement">
            <d:ListView.ItemsSource>
                <x:Array Type="{x:Type models:Contact}">
                    <models:Contact
                            Hometown="Seattle, WA"
                            Name="James Montemagno"
                            Image="icon.png"
                            Mood="😍"
                            Tagline="Program Manager"/>
                </x:Array>
            </d:ListView.ItemsSource>
            <ListView.SeparatorColor>
                <OnPlatform x:TypeArguments="Color" Android="Transparent"/>
            </ListView.SeparatorColor>
            <ListView.Effects>
                <effects:SelectionOnTopEffect/>
            </ListView.Effects>
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.Height>
                            <OnPlatform x:TypeArguments="x:Double" iOS="28"/>
                        </ViewCell.Height>
                        <cells:ContactsGroupHeaderView/>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <cells:ContactCell StyleId="disclosure"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button 
                Margin="10"
                Grid.Row="1" Command="{Binding ForceRefreshCommand}"
                 Style="{StaticResource ButtonOutline}"
                 IsEnabled="{Binding IsNotBusy}"
                 Text="{i18n:Translate FindCloseCDAs}"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}"
                           Style="{StaticResource MaterialIndicator}"
                           Grid.RowSpan="2"/>
    </Grid>
</ContentPage>
